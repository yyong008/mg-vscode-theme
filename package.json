{
  "name": "i-nature",
  "displayName": "iNature",
  "description": "",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "iNature Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/iNatureDark.json"
      },
      {
        "label": "iNature Light",
        "uiTheme": "vs",
        "path": "./themes/iNatureLight.json"
      },
      {
        "label": "iNature HC",
        "uiTheme": "hc-light",
        "path": "./themes/iNatureLightConstrast.json"
      },
      {
        "label": "iNature HC black",
        "uiTheme": "hc-black",
        "path": "./themes/iNatureDarkConstrast.json"
      }
    ]
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "gulp": "^4.0.2"
  },
  "scripts": {
    "lint": "eslint --ext .ts,.js,.tsx,.jsx .",
    "lint:fix": "eslint --ext .ts,.js,.tsx,.jsx . --fix",
    "stylelint": "stylelint ./src/**/*.{css,less,scss,sass}",
    "stylelint:fix": "stylelint ./src/**/*.{css,less,scss,sass} --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "postinstallmac": "git config core.hooksPath .husky && chmod 777 .husky/*",
    "commit": "git add . && cz",
    "gulp": "gulp"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.10.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
